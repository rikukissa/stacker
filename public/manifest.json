{
  "version": "0.1.2",
  "name": "Stacker",
  "manifest_version": 2,
  "description": "Stacked pull requests for Github",
  "content_scripts": [{
    "js": ["{{BUNDLE}}"],
    "matches": ["*://*/*"]
  }],
  "browser_action": {
    "default_title": "Stacker",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["*://*/*", "storage"],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
